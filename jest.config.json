{
    "verbose": true,
    "testEnvironment": "node",
    "moduleDirectories": ["node_modules", "src"],
    "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
        "^.+\\.js$": "babel-jest"
    },
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.js", "**/?(*.)+(spec|test).js"],
    "collectCoverage": true,
    "clearMocks": true,
    "resetMocks": true
}